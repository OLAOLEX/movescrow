{
  "version": "3.0",
  "screens": [
    {
      "id": "order_screen",
      "title": "Order Management",
      "data": {},
      "type": "DETAIL",
      "content": {
        "type": "webview",
        "url": "{{flow.data.order_url}}",
        "height": "TALL"
      },
      "actions": {
        "navigate": {
          "next": {
            "name": "get_order_url",
